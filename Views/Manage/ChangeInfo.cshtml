@model ChangeInfoViewModel
@{
    ViewData["Title"] = "Change Info";
}

<header class="text-center">
    <h2>@ViewData["Title"]</h2>
    <h4>Change your profile information</h4>
</header>

<hr />
<form asp-controller="Manage" asp-action="ChangeInfo" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger col-xs-offset-3 col-xs-9 col-sm-offset-4 col-sm-8"></div>
    <div class="form-group">
        <label asp-for="FullName" class="col-md-2 col-md-offset-3 col-xs-2 col-xs-offset-2 control-label"></label>
        <div class="col-md-7 col-xs-8">
            <input asp-for="FullName" class="form-control" placeholder="John Doe" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-7 col-xs-offset-4 col-xs-8">
            <button type="submit" class="btn btn-primary">Change</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}