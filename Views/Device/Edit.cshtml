@model ZRdotnetcore.Models.DeviceViewModels.EditDeviceViewModel
@{
    ViewData["Title"] = "Edit device";
}

<header class="text-center">
    <h2>@ViewData["Title"]</h2>
    <h4>Update selected device properties</h4>
</header>

<hr />
<form asp-controller="Device" asp-action="Edit" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger col-xs-offset-3 col-xs-9 col-sm-offset-4 col-sm-8"></div>
    <div class="form-group">
        <label asp-for="Hostname" class="col-md-2 col-md-offset-3 col-xs-2 col-xs-offset-2 control-label"></label>
        <div class="col-md-7 col-xs-8">
            <input asp-for="Hostname" class="form-control" />
            <span asp-validation-for="Hostname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DeviceType" class="col-md-2 col-md-offset-3 col-xs-2 col-xs-offset-2 control-label"></label>
        <div class="col-md-7 col-xs-8">
            <select asp-for="DeviceType" asp-items="@(new SelectList(Model.DeviceTypeList, "Id", "Name"))" class="form-control">
                <option selected="selected" disabled="disabled"> -- select -- </option>
            </select>
            <span asp-validation-for="DeviceType" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-7 col-xs-offset-4 col-xs-8">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


