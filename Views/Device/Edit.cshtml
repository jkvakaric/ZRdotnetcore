@model DeviceEditViewModel
@{ Layout = null; }

<form id="modal-edit-device-form" asp-controller="Device" asp-action="Edit" method="post" class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title text-center">Edit selected device properties</h4>
    </div>
    <hr />
    <div class="modal-body  text-center">
        <div asp-validation-summary="ModelOnly" class="text-danger col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6"></div>
        <div class="form-group">
            <input asp-for="Id" type="hidden" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Hostname" class="col-xs-4 control-label"></label>
            <div class="col-xs-8">
                <input asp-for="Hostname" class="form-control" />
                <span asp-validation-for="Hostname" class="text-danger text-center"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DeviceType" class="col-xs-4 control-label"></label>
            <div class="col-xs-8">
                <select asp-for="DeviceType" asp-items="@(new SelectList(Model.DeviceTypeList, "Id", "Name"))" class="form-control">
                    <option selected="selected" disabled="disabled"> -- select -- </option>
                </select>
                <span asp-validation-for="DeviceType" class="text-danger text-center"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button data-dismiss="modal" class="btn btn-default" type="button">CANCEL</button>
        <button type="submit" class="btn btn-success">EDIT</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        $.validator.unobtrusive.parse('#modal-edit-device-form');
    });
</script>
