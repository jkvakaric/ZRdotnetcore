@model Device
@{ Layout = null; }

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title text-center">Selected device information</h4>
</div>
<hr />
<div class="modal-body text-center">
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Owner</th>
                <td>@Model.User.FullName</td>
            </tr>
            <tr>
                <th>Hostname</th>
                <td>@Model.Hostname</td>
            </tr>
            <tr>
                <th>Added On</th>
                <td>@Model.AddedOn</td>
            </tr>
            <tr>
                <th>Updated On</th>
                <td>@Model.UpdatedOn</td>
            </tr>
            <tr>
                <th>Device Type</th>
                <td>@Model.DeviceType.Name</td>
            </tr>
            <tr>
                <th>Active Readings</th>
                <td>@Model.ActiveReadings.Count</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button data-dismiss="modal" class="btn btn-default" type="button">CLOSE</button>
</div>
