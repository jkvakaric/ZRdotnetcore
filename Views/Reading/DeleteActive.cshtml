@model ActiveReadingDeleteViewModel
@{ Layout = null; }

<form id="modal-del-ar-form" asp-controller="Reading" asp-action="DeleteActive" method="post" class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title text-center">Are you sure you want to delete this Active Reading from @ViewData["deviceName"]?</h4>
    </div>
    <hr />
    <div class="modal-body  text-center">
        <div class="form-group">
            <input asp-for="Id" type="hidden" class="form-control" />
        </div>
        <div class="form-group">
            <input asp-for="DeviceId" type="hidden" class="form-control" />
        </div>
        <div class="form-group">
            <h4 class="text-center">@Model.Name</h4>
            <input asp-for="Name" type="hidden" class="form-control"/>
        </div>
    </div>
    <div class="modal-footer">
        <button data-dismiss="modal" class="btn btn-default" type="button">CANCEL</button>
        <button type="submit" class="btn btn-danger">DELETE</button>
    </div>
</form>
