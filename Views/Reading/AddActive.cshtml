@model ActiveReadingAddViewModel
@{ Layout = null; }

<form id="modal-add-ar-form" asp-controller="Reading" asp-action="AddActive" method="post" class="form-horizontal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title text-center">Add new Active Reading to @ViewData["deviceName"]</h4>
    </div>
    <hr />
    <div class="modal-body  text-center">
        <div asp-validation-summary="ModelOnly" class="text-danger col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6"></div>
        <div class="form-group">
            <input asp-for="DeviceId" type="hidden" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-xs-4 control-label"></label>
            <div class="col-xs-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger text-center"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DataFilepath" class="col-xs-4 control-label"></label>
            <div class="col-xs-8">
                <input asp-for="DataFilepath" class="form-control" />
                <span asp-validation-for="DataFilepath" class="text-danger text-center"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReadingType" class="col-xs-4 control-label"></label>
            <div class="col-xs-8">
                <select asp-for="ReadingType" asp-items="@(new SelectList(Model.ReadingTypeList, "Id", "Name"))" class="form-control">
                    <option selected="selected" disabled="disabled"> -- select -- </option>
                </select>
                <span asp-validation-for="ReadingType" class="text-danger text-center"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button data-dismiss="modal" class="btn btn-default" type="button">CANCEL</button>
        <button type="submit" class="btn btn-success">ADD</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        $.validator.unobtrusive.parse('#modal-add-ar-form');
    });
</script>
